                echo '<li class="' . $active . '">' . $image . '<input name="vehicle-type" ' . $checked . ' type="radio" id="type_' . $key . '" value="' . $key . '" /><label for="type_' . $key . '">' . $type['cs_type_name'] . '</label></li>';
            }
