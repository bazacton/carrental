    function form($instance) {
        $instance = wp_parse_args((array) $instance);
        $title = isset($instance['title']) ? esc_attr($instance['title']) : '';

        $randomID = rand(40, 9999999);
        ?>    
        <div style="margin-top:0px; float:left; width:100%;">
